{
  "name": "word-coach-vue",
  "type": "module",
  "author": "Jude Agboola <marvinjudehk@gmail.com>",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "scripts": {
    "build": "npm run build:umd & npm run build:es & npm run build:unpkg",
    "build:umd": "rollup --config rollup.config.js --format umd",
    "build:es": "rollup --config rollup.config.js --format es",
    "build:unpkg": "rollup --config rollup.config.js --format iife",
    "watch": "rollup --config rollup.config.js --watch",
    "clean": "del-cli dist/*"
  },
  "peerDependencies": {
    "vue": "3.x"
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "autoprefixer": "^10.4.14",
    "word-coach-common": "workspace:*"
  },
  "devDependencies": {
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^24.0.1",
    "del-cli": "^5.0.0",
    "node-sass": "^8.0.0",
    "postcss-preset-env": "^6.0.0",
    "rollup": "^3.18.0",
    "rollup-plugin-postcss": "^2.0.0",
    "rollup-plugin-vue": "^6.0.0",
    "vue": "^3.2.47",
    "vue-template-compiler": "^2.6.10"
  }
}