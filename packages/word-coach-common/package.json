{
  "name": "word-coach-common",
  "author": "Jude Agboola <marvinjudehk@gmail.com>",
  "version": "1.0.0",
  "description": "Styles and utilities for word-coach",
  "type": "module",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/marvinjude/word-coach/word-coach-common#readme",
  "bugs": "https://github.com/marvinjude/word-coach/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/marvinjude/word-coach.git",
    "directory": "packages/word-coach-common"
  },
  "exports": {
    "./styles/styles.css": "./dist/styles.css",
    "./icons/*": "./dist/icons/*",
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "rollup --config rollup.config.js --watch",
    "clean": "del-cli dist/*",
    "types:check": "tsc --noEmit",
    "types:build": "tsc --emitDeclarationOnly"
  },
  "keywords": [
    "word-coach",
    "word-coach-common",
    "word-coach-styles",
    "word-coach-utilities"
  ],
  "license": "MIT",
  "devDependencies": {
    "del-cli": "^5.0.0",
    "rollup-plugin-copy": "^3.4.0",
    "tslib": "^2.5.0",
    "typescript": "^4.5.4",
    "typescript-plugin-css-modules": "^4.2.3"
  },
  "dependencies": {
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "rollup": "^3.0.0",
    "rollup-plugin-sass": "^1.12.19"
  }
}